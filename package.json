{
  "name": "ai-interview-platform",
  "version": "1.0.0",
  "description": "AI-powered interview platform with multilingual support",
  "private": true,
  "workspaces": [
    "front",
    "server", 
    "backend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=front & npm run dev --workspace=server",
    "build": "npm run build --workspace=front && npm run build --workspace=server",
    "start:front": "npm run dev --workspace=front",
    "start:server": "npm run dev --workspace=server",
    "start:backend": "npm run start:dev --workspace=backend",
    "backend:build": "npm run build --workspace=backend"
  },
  "keywords": [
    "ai",
    "interview", 
    "platform",
    "multilingual",
    "react",
    "node.js"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "vite-plugin-static-copy": "^3.1.1"
  }
}
